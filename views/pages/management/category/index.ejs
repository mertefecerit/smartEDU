<div class="row">
    <div class="col-lg-4">
        <form action="/user/management/category" method="post">
            <input name="name" type="text" placeholder="Course Name" class="form-control mb-2">
            <button class="btn btn-danger fw-bold w-100"><i class="fas fa-save"></i> Kaydet</button>
        </form>
    </div>
    <div class="col-lg-8">
        <ul class="list-group">
            <% if (categories.length > 0) { %>
                <% categories.forEach(category => { %>
                    <li class="list-group-item"><%= category.name %> </li>
                <% }) %>
            <% } else { %>
                <li>Ops.. There is not any registered data just yet</li>
            <% } %>
        </ul>
    </div>
</div>